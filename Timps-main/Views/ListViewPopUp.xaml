<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="TekTrackingCore.Views.ListViewPopUp"
              
               >

    <VerticalStackLayout Padding="10,10" WidthRequest="350">
        <Label x:Name="msgText" FontAttributes="Bold" />
        <HorizontalStackLayout HorizontalOptions="End">
            <Button Text="No" Clicked="NoButton_Clicked" Margin="5" />
            <Button Text="Yes" Clicked="YesButton_Clicked" Margin="5"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</toolkit:Popup>
