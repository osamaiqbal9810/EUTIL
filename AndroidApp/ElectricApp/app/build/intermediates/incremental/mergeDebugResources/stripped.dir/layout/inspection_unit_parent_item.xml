<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_background"
    android:paddingEnd="3dp"
    android:paddingStart="3dp"
    android:paddingTop="@dimen/dp5"
    android:orientation="vertical"
    android:paddingBottom="3dp"

    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@color/color_inspection_row"
            android:weightSum="1">

            <View android:background="@drawable/circle_gray"
                android:id="@+id/viewParent"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tvParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:fontFamily="@font/cabin"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/title_text"
                android:paddingStart="5dp" />

            <ImageView
                android:id="@+id/img_issue_add_iupi"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                app:tint="#5c5c5c"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:padding="10dp"

                android:background="?android:attr/selectableItemBackground"

                app:srcCompat="@drawable/inspection_plus"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_inspection_tile"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/pin_light_gray"


            android:visibility="visible" />
    </FrameLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_inspection_row"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgViewPopup"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/more"
            android:layout_marginLeft="15dp"
            />
        <LinearLayout
            android:id="@+id/ll_marker_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_flag_black_24dp"
                    android:contentDescription="Start MP" />

                <TextView
                    android:id="@+id/tv_marker_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="35"
                    android:text="00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_marker_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_flag_grey_24dp"
                    android:contentDescription="End Marker" />

                <TextView
                    android:id="@+id/tv_marker_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="1"
                    android:maxLength="35"
                    android:ellipsize="end"
                    android:text="00" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mp_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_flag_black_24dp"
                android:contentDescription="Start MP" />

            <TextView
                android:id="@+id/tvMilPostStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="00" />

            <ImageView
                android:id="@+id/imgMpEndValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_flag_grey_24dp"
                android:contentDescription="Start MP" />

            <TextView
                android:id="@+id/tvMilPostEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="00" />

            <TextView
                android:id="@+id/tvMilPostLimits"
                android:layout_width="120dp"

                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"


                android:layout_marginStart="10dp"

                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"

                android:gravity="center"
                android:text="[10000-10000]"
                android:visibility="gone"
                android:textSize="14sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_issues_counts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="start"
            android:layout_marginLeft="0dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_marginStart="0dp"
            >
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0"
                android:paddingRight="10dp"
                >



            <ImageView
                android:id="@+id/iv_defects_list"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notification"

                 />
            <TextView
                
                android:id="@+id/issue_count_new"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|end|top"
                android:layout_marginEnd="-1dp"
                android:layout_marginRight="-1dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/badge_background"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@android:color/white"
                android:text="0"
                android:textSize="10sp"
                />
            </FrameLayout>
            <TextView
                
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="/"
                android:visibility="gone"
                />
            <TextView

                android:layout_gravity="center"

                android:id="@+id/issue_count_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:visibility="gone"
                android:text="2"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgObserve"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"

            android:paddingRight="5dp"

            android:paddingBottom="5dp"
            app:srcCompat="@drawable/img_observing" />

        <ImageView
            android:id="@+id/imgTraverse"
            
            android:background="?android:attr/selectableItemBackground"

            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            
            app:srcCompat="@drawable/img_traversing"
            />
        <ImageView
            android:id="@+id/fixAssetLocationEdit"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_margin="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/edit_location_btn_selector"
            android:drawableTint="@android:color/black" />

    </LinearLayout>
</LinearLayout>
