<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            style="@style/headerText"
            android:text="@string/account_info"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageView"
                android:src="@drawable/ic_round_person_24"
                style="@style/profileDetailsImage" />

            <TextView
                android:id="@+id/nameTextView"
                android:text="@string/name"
                android:layout_toRightOf="@id/nameImageView"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@id/nameTextView"
                android:text="developer"
                android:layout_toRightOf="@id/nameImageView"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/profileDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/passIv"
                android:src="@drawable/ic_round_password_24"
                style="@style/profileDetailsImage" />

            <TextView
                android:id="@+id/passTv"
                android:text="@string/password"
                android:layout_toRightOf="@id/passIv"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:text="******"
                android:layout_toRightOf="@id/passIv"
                style="@style/profileDetailsMiniText" />
            <ImageView
                android:id="@+id/iv_password_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_round_edit_24"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View style="@style/profileDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/mobileImageView"
                android:src="@drawable/ic_round_phone_iphone_24"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="@string/mobile"
                android:layout_toRightOf="@id/mobileImageView"
                style="@style/profileDetailsTextMain"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:text="+92-8129999999"
                android:layout_toRightOf="@id/mobileImageView"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>
        <View style="@style/profileDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/phoneIv"
                android:src="@drawable/ic_round_contact_phone_24"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="@string/phone"
                android:layout_toRightOf="@id/phoneIv"
                style="@style/profileDetailsTextMain"/>

            <TextView
                android:id="@+id/tv_phone"
                android:text="+92-8129999999"
                android:layout_toRightOf="@id/phoneIv"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/profileDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/emailImageView"
                android:src="@drawable/ic_round_email_24"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="@string/email"
                android:layout_toRightOf="@id/emailImageView"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/tv_email"
                android:text="developer@appsnipp.com"
                android:layout_toRightOf="@id/emailImageView"
                style="@style/profileDetailsMiniText" />

        </RelativeLayout>

        <View style="@style/profileDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/signIV"
                android:src="@drawable/ic_baseline_insights_24"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="@string/signature"
                android:layout_toRightOf="@id/signIV"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/tv_signature"
                android:text="View"
                android:layout_toRightOf="@id/signIV"
                style="@style/profileDetailsMiniText"
                android:layout_toEndOf="@id/signIV" />
            <ImageView
                android:id="@+id/iv_signature_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_round_edit_24"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View style="@style/profileDetailsView" />
