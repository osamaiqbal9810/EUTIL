<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/issue_row_background"
    android:orientation="horizontal">

    <!--  ListRow Left sied Thumbnail image -->

    <!--
            android:layout_alignTop="@+id/reportThumbnail"
            android:layout_toRightOf="@+id/reportThumbnail"-->
    <LinearLayout
        android:id="@+id/reportThumbnailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:padding="3dp"
            android:src="@drawable/no_image" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Need Repairs"
                android:textColor="#040404"
                android:typeface="sans"
                android:fontFamily="@font/cabin"
                android:textSize="16sp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/arrowLayout"
                android:layout_width="wrap_content"
                android:layout_below="@id/reportTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arrowLayout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/priorityImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:srcCompat="@drawable/pin" />

                    <TextView
                        android:id="@+id/priorityTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Medium"
                        android:fontFamily="@font/cabin"
                        android:paddingStart="1dp"
                        android:paddingLeft="1dp"
                        android:typeface="sans"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="bottom"
                        app:srcCompat="@drawable/ic_pin_drop_black_24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reportLatTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="36.778259"
                            android:maxLength="10"
                            android:fontFamily="@font/cabin"
                            android:typeface="normal"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/reportLongTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="10"
                            android:text="-119.41493"
                            android:typeface="normal"
                            android:fontFamily="@font/cabin"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/markedImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/flag" />

                    <TextView
                        android:id="@+id/markedTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/fixed"
                        android:paddingLeft="3dp"
                        android:paddingStart="3dp"
                        android:typeface="sans"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Title Of Song-->
