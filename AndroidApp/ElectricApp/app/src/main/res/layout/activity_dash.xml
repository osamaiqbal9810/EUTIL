            <!--Following code only for backward compatibility, no effect on ui-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border"
                android:gravity="center_vertical|end"
                android:padding="40dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout_dash_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/today"
                                android:textAllCaps="true"
                                android:textColor="@color/title_black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/cabin" />

                            <TextView
                                android:id="@+id/sodDateTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/elapsed"
                                android:textAllCaps="true"
                                android:textColor="@color/title_black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/cabin" />

                            <TextView
                                android:id="@+id/elapsedTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time" />
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dash_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_dash_1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reported"
                                android:textAllCaps="true"
                                android:textColor="@color/title_black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/cabin" />

                            <TextView
                                android:id="@+id/reportedIssuesTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/issues" />
                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_activity_inbox"
                                android:textAllCaps="true"
                                android:textColor="@color/title_black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/cabin" />

                            <TextView
                                android:id="@+id/inspTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:text="@string/work_plan" />
                            <TextView
                                android:id="@+id/tv_det_ma"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jan, 31, 2019"
                                android:layout_weight=".5"
                                android:gravity="right"
                                android:textColor="@color/credentials_white" />
                            <ImageView
                                android:id="@+id/syncStatusIcon"
                                android:layout_width="29dp"
                                android:layout_height="30dp"
                                android:layout_gravity="end"
                                android:background="@drawable/round_border"
                                android:visibility="gone" />
                            <TextView
                                android:id="@+id/tvServiceStatus_ma"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
