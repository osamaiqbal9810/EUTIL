<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_dash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_user"
        layout="@layout/user_info" />
    <ScrollView
        android:layout_below="@id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_location_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="visible"
                android:background="@color/title_background">

                <ImageView
                    android:id="@+id/iv_location_title"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:drawableTint="@android:color/black"
                    android:src="@drawable/ic_gps_fixed_gray_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_location_title"
                    android:text="@string/live_location"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/tile_font_size_title"
                    android:textStyle="bold"
                    android:textColor="@color/title_text" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_current_location"
                android:layout_below="@id/rl_location_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/imgGPSIcon_ma"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/tvCurrLocationText_ma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cabin"
                    android:text="@string/getting_location_please_wait"
                    android:textSize="12dp" />

            </LinearLayout>
            <RelativeLayout
                android:layout_below="@id/ll_current_location"
                android:id="@+id/rl_run_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/title_background">

                <ImageView
                    android:id="@+id/iv_run_title"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_run_status_title"/>
                <TextView
                    android:layout_toRightOf="@id/iv_run_title"
                    android:layout_toEndOf="@id/iv_run_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/tile_font_size_title"
                    android:textStyle="bold"
                    android:textColor="@color/title_text"
                    android:layout_centerVertical="true"
                    android:text="@string/run_status"/>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/ll_BtnSS_ma"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/color_stop_background">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgBtnSS_ma"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            />

                        <TextView
                            android:id="@+id/tvBtnSS_ma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/cabin"
                            android:textSize="12sp"
                            android:text="@string/stop_new_theme"
                            android:textColor="@color/credentials_white" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/rl_inspection_progress"
                android:layout_below="@id/rl_run_title"
                android:layout_marginTop="10dp"
                android:padding="@dimen/tile_padding"
                android:background="@color/tile_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_inspection_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_inspection_summary_title"/>
                    <TextView
                        android:id="@+id/tv_inspection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/cabin"
                        android:textSize="@dimen/tile_font_size_title"
                        android:textStyle="bold"
                        android:textColor="@color/title_text"
                        android:text="@string/inspection_in_progress"/>
                </LinearLayout>

                <View
                    android:id="@+id/v_divider_inspection"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_below="@id/ll_inspection_details"
                    android:background="@color/tile_divider" />

                <TextView
                    android:id="@+id/tv_dem_ma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_divider_inspection"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/tile_top_bottom"
                    android:layout_marginBottom="@dimen/tile_top_bottom"
                    android:text="3rd Rail"
                    android:fontFamily="@font/cabin"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/tile_font_size_details"/>
                <LinearLayout
                    android:id="@+id/llFinishedStatus_ma"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/tv_dem_ma"
                    android:layout_toEndOf="@id/tv_dem_ma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_finished_status"
                        android:textAllCaps="true"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/cabin"
                        android:textColor="@color/credentials_white"
                        android:layout_gravity="end"/>

                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_inspection_task"
                android:layout_below="@id/rl_inspection_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_task_status"
                    android:layout_weight="1"
                    android:layout_below="@id/rl_inspection_progress"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/tile_padding"
                    android:background="@color/tile_background"
                    android:layout_width="match_parent"
                    android:layout_height="94dp">
                    <LinearLayout
                        android:id="@+id/ll_task_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/tile_small_margin_right_left"
                        android:layout_marginLeft="@dimen/tile_small_margin_right_left"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_task_status"/>
                        <TextView
                            android:id="@+id/tv_session_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/title_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/tile_font_size_title"
                            android:fontFamily="@font/cabin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/title_activity_task_detail"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/v_divider_task"
                        android:layout_below="@id/ll_task_details"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/tile_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_divider_task"
                        android:layout_marginTop="@dimen/tile_top_bottom"
                        android:layout_marginBottom="@dimen/tile_top_bottom"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight=".5"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_tbc_ma"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="22sp"
                                android:visibility="gone"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:visibility="gone"
                                android:fontFamily="@font/cabin"
                                android:text="@string/out_of"/>

                            <TextView
                                android:id="@+id/tv_tbt_ma"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp"
                                android:fontFamily="@font/cabin"
                                android:text="5"
                                android:textSize="@dimen/tile_font_size_details" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:layout_gravity="end">
                            <ImageView
                                android:id="@+id/iv_view_sessions"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:fontFamily="@font/cabin"
                                android:layout_gravity="end"
                                android:paddingLeft="5dp"
                                android:textStyle="bold"
                                android:scaleType="fitXY"
                                android:src="@drawable/read_more_selector"
                                android:textColor="@color/title_text"
                                android:textSize="15sp"
                                android:paddingStart="5dp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_issues_reported"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_below="@id/ll_inspection_task"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/tile_background"
                    android:padding="@dimen/tile_padding">

                    <LinearLayout
                        android:id="@+id/ll_issues_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/tile_right_left"
                        android:layout_marginRight="@dimen/tile_right_left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_reports" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/cabin"
                            android:text="@string/reported"
                            android:textColor="@color/title_text"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/tile_font_size_title"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v_divider_issues"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:layout_below="@id/ll_issues_details"
                        android:background="@color/tile_divider" />

                    <TextView
                        android:id="@+id/tv_ibc_ma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_divider_issues"
                        android:layout_marginTop="@dimen/tile_top_bottom"
                        android:layout_marginBottom="@dimen/tile_top_bottom"
                        android:fontFamily="@font/cabin"
                        android:gravity="center"
                        android:text="35 "
                        android:textSize="@dimen/tile_font_size_details" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_time_progress"
                android:layout_below="@id/ll_inspection_task"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="@dimen/tile_padding"
                android:background="@color/tile_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_time_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="start"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgClockIcon_ma"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_time_recorded"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/tile_font_size_title"
                        android:textColor="@color/title_text"
                        android:fontFamily="@font/cabin"
                        android:text="@string/time_recorded"/>
                </LinearLayout>
                <View
                    android:id="@+id/v_divider_time"
                    android:layout_below="@id/ll_time_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/tile_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/v_divider_time"
                    android:layout_marginTop="@dimen/tile_top_bottom"
                    android:layout_marginBottom="@dimen/tile_top_bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_teh_ma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20d 15h"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/tile_font_size_details"
                        android:fontFamily="@font/cabin" />
                    <TextView
                        android:id="@+id/tv_tem_ma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/tile_font_size_details"
                        android:text="0m"
                        android:fontFamily="@font/cabin"
                        />
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_time_progress"
                android:layout_alignParentBottom="true">

                <RelativeLayout

                    android:id="@+id/rl_action_title"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:visibility="gone"
                    android:background="@color/title_background">

                    <ImageView
                        android:id="@+id/iv_action_title"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/ic_touch_app_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_action_title"
                        android:text="@string/actions"
                        android:textColor="@color/title_text" />
                </RelativeLayout>


            </RelativeLayout>

