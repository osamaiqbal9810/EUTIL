<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".InboxActivity"
    tools:showIn="@layout/activity_inbox2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_location_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/layout_user"
            android:visibility="visible"
            android:background="@color/title_background">

            <ImageView
                android:id="@+id/iv_location_title"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:drawableTint="@android:color/black"
                android:src="@drawable/ic_inspection_in_progress" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/inspection"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_location_title"
                android:fontFamily="@font/cabin"
                android:textColor="@color/title_text" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:showDividers="end">



            <TextView
                android:id="@+id/tvSelectedJPTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workplan_selection_title"
                android:padding="7dp"
                android:textColor="@color/dashboard_back_color"
                app:fontFamily="@font/cabin" />
            <!--<Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />-->

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />-->
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_task_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/layout_user"
            android:visibility="visible"
            android:background="@color/title_background">

            <ImageView
                android:id="@+id/iv_task_title"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:drawableTint="@android:color/black"
                android:src="@drawable/ic_task_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/tasks"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_task_title"
                android:fontFamily="@font/cabin"
                android:textColor="@color/title_text" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <ListView
            android:id="@+id/taskList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>