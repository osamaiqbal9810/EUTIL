<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:id="@+id/ll_session_child"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="2dp"
        android:background="@drawable/linear_layout_border"
        android:layout_marginEnd="2dp"
        android:weightSum="1">

        <View android:background="@drawable/traverse"
            android:id="@+id/viewTraverse"
            android:layout_width="25dp"
            android:layout_height="25dp"
            

            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"

            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/tv_traverse_track"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/cabin"
            android:layout_weight="1"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_layout_border"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:weightSum="1">

        <View android:background="@drawable/observe"
            android:id="@+id/viewObserve"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"

            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp" />
        <TextView
            android:id="@+id/tv_observe_track"
            android:layout_width="0dp"
            android:text="N/A"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/cabin"
            android:layout_weight="1"
            android:textSize="14sp"/>

    </LinearLayout>


</LinearLayout>