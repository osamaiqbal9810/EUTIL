<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/ll_sessions"
    android:background="@color/tile_divider" >

    <LinearLayout
        android:id="@+id/ll_inspection_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_background"

        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rl_session"
            android:background="@color/title_background"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_session_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:fontFamily="@font/cabin"
                android:singleLine="true"
                android:text="@string/session_title"
                android:textSize="@dimen/tile_font_size_title"
                android:textColor="@color/title_text"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                />



            <LinearLayout
                android:id="@+id/ll_time_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/imgClockIcon_ma"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_time_recorded"
                    app:tint="#000000"
                    />
                <TextView
                    android:id="@+id/tv_session_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/tile_font_size_title"
                    android:textColor="@color/blackTextColor"
                    android:fontFamily="@font/cabin"
                    android:text="20h 15m"
                    />

                <ImageView
                    android:id="@+id/session_expand_indicator"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_expand_more_white_24dp"
                    app:tint="#000000" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                >
                <TextView
                    android:id="@+id/tv_session_NO"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:text="@string/session_number"
                    android:textColor="@color/blackTextColor"

                    />

                <TextView
                    android:id="@+id/tv_session_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"

                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/session_default_count"
                    android:textAlignment="center"
                    android:textColor="@color/blackTextColor"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_flag_black_24dp"
                    android:contentDescription="Start MP" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"

                    android:text="@string/session_start"
                    android:textColor="@color/blackTextColor"
                    android:textSize="17sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_session_startMP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"

                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="@color/blackTextColor"

                    android:textSize="16sp"

                    />
                <ImageView
                    android:id="@+id/imgMpEndValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_flag_grey_24dp"
                    android:contentDescription="End MP" />

                <TextView
                    android:id="@+id/tv_session_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:text="@string/session_end"
                    android:textColor="@color/blackTextColor"
                    android:textSize="17sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_session_endMP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:paddingStart="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/session_default_startTime"
                    android:textAlignment="center"
                    android:textColor="@color/blackTextColor"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_BtnSS_ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop_new_theme"
                android:textColor="@color/credentials_white"
                android:background="@color/color_stop_background"
                android:textSize="17sp" />



        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ExpandableListView
        android:id="@+id/sessionsExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:background="@color/design_default_color_background">
    </ExpandableListView>

</LinearLayout>