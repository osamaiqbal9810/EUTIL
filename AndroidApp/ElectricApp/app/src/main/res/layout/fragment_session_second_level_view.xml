<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll_session_group"
    android:background="@color/color_start_button_light"
    android:paddingEnd="3dp"
    android:paddingStart="3dp"
    android:paddingTop="@dimen/dp5"
    android:gravity="start">

    <LinearLayout
        android:id="@+id/ll_inspection_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_session"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@color/color_inspection_row"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_toStartOf="@+id/ll_time_details"
                android:layout_toLeftOf="@+id/ll_time_details"
                android:gravity="center"
                android:paddingStart="@dimen/dp5"
                android:paddingLeft="@dimen/dp5">

                <TextView
                    android:id="@+id/tv_session_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/cabin"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/session_title"
                    android:textColor="@color/blackTextColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_time_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgClockIcon_ma"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"

                    android:gravity="center"
                    android:paddingStart="3dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="3dp"

                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_time_recorded" />

                <TextView
                    android:id="@+id/tv_session_duration"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cabin"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:text="0h:0m"
                    android:textSize="19sp" />
            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/rl_session_details"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/color_inspection_row">

            <LinearLayout
                android:id="@+id/ll_session_MP_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_flag_black_24dp"
                    android:contentDescription="Start MP" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:text="@string/session_start"
                    android:visibility="gone"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_session_startMP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/cabin"

                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:text="@string/session_default_startTime"
                    android:textAlignment="center"
                    android:textSize="19sp"

                    />
                <ImageView
                    android:id="@+id/imgMpEndValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_flag_grey_24dp"
                    android:contentDescription="Start MP" />

                <TextView
                    android:id="@+id/tv_session_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:text="@string/session_end"
                    android:visibility="gone"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_session_endMP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/cabin"

                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:text="@string/session_default_startTime"
                    android:textAlignment="center"
                    android:textSize="19sp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>