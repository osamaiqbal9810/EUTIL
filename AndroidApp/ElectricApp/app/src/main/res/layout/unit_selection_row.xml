<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="2dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corner">
    <ImageView
        android:id="@+id/iv_unit_title"
        android:layout_width="41dp"
        android:layout_height="39dp"
        android:scaleType="fitCenter"
        android:src="@drawable/unit_static"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:contentDescription="unit Img" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_asset_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:lines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:singleLine="false"
            android:text="asdsadsadsdsadsadsadasdasasdasdasdasdasdsaddasdasdasdsadasdsadsadsadsadsadsadsadsadsad"
            android:textColor="@color/title_black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_asset_issue_count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reported: "/>
            <TextView
                android:id="@+id/tv_asset_issue_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_black"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_asset_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/cabin"
                android:text="Switch"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_asset_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:text="distance"
                    android:textColor="@color/title_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_asset_distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_black"
                    android:fontFamily="@font/cabin"
                    android:text="KM"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_unit_direction_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Direction"
                android:fontFamily="@font/cabin"
                android:textColor="@color/gradient_blue_dark"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/iv_unit_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>