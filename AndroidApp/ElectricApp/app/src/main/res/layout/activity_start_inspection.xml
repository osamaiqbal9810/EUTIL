<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shared.StartInspectionFragment">

    <!-- <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/text_margin"
         android:text="@string/large_text" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/ll_start_mp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_msg_wp_start_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/require_mp_title"/>
            <TextView
                android:id="@+id/tv_title_mp_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="MP"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_nearby_assets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_asset_ahead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:text="@string/assets_ahead"/>
                <Spinner
                    android:id="@+id/sp_assets_ahead"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_asset_behind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:text="@string/assets_behind"/>
                <Spinner
                    android:id="@+id/sp_assets_behind"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_selected_nearby_asset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mp_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_start_mp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/start_mp_title"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_start_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_workplan_start_mp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/cabin"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_exp_end_mp_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_exp_end_mp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/exp_end_dialog_title"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_exp_end_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_exp_end_mp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/cabin"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sharing_inspection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_sharing_inspection_members_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Few other users working on this inspection."/>
            <LinearLayout
                android:id="@+id/ll_list_sharing_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/lv_sharing_members"
                    android:nestedScrollingEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_traverse_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_traverse_track_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/traverse_track_selection_title"/>
            <Spinner
                android:id="@+id/sp_traverse_track"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/traversed_by_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <RadioGroup
                    android:id="@+id/rg_traverse_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rb_action_class2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:textSize="12sp"
                        android:tag="Hi-Rail"
                        android:text="@string/traverse_by_driving" />
                    <RadioButton
                        android:id="@+id/rb_action_class1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/cabin"
                        android:tag="Walking"
                        android:text="@string/traverse_by_walking" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_weather_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/weather_condition_title"/>
            <EditText
                android:id="@+id/et_weather_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:paddingBottom="10dp"
                    android:text="@string/select_temperature_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:padding="10dp"
                    android:text="( &#176;"/>
                <TextView
                    android:id="@+id/tv_temp_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textStyle="bold"
                    android:textSize="@dimen/btn_font_size"
                    android:text="F"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:text=" )"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/temp_values"
                android:fontFamily="@font/cabin"
                android:prompt="@string/temp_prompt" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_inspection_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/inspection_type_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <RadioGroup
                    android:id="@+id/rg_inspection_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rb_inspection_type_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:textSize="12sp"
                        android:text="@string/inspection_type_1" />
                    <RadioButton
                        android:id="@+id/rb_inspection_type_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/cabin"
                        android:text="@string/inspection_type_2" />
                    <RadioButton
                        android:id="@+id/rb_inspection_type_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/cabin"
                        android:text="@string/inspection_type_3" />
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/description_title"/>
            <EditText
                android:id="@+id/et_inspection_type_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"/>
        </LinearLayout>
        <!--<LinearLayout
            android:id="@+id/ll_visual_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_visual_track_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select the Traverse track"/>
            <Spinner
                android:id="@+id/sp_visual_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:background="@color/btn_color_primary"
                android:padding="0dp"
                android:fontFamily="@font/cabin"
                android:textColor="@color/credentials_white"
                android:textSize="17sp"
                android:text="@string/btn_done"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:background="@color/color_stop_background"
                android:padding="0dp"
                android:fontFamily="@font/cabin"
                android:textColor="@color/credentials_white"
                android:textSize="17sp"
                android:layout_marginRight="30dp"
                android:text="@string/btn_cancel"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>