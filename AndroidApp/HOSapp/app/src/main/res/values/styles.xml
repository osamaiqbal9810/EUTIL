<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/credentials_white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextAppearence.TextInputLayout.Light.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/credentials_white</item>
    </style>

    <style name="TextviewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="RadioGroupStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

</resources>
