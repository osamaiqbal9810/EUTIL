<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="2dp"
    android:paddingBottom="5dp"
    android:weightSum="4"
    android:background="@drawable/rounded_corner">

<ImageView
    android:id="@+id/iv_unit_title"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:src="@drawable/unit_static"
    android:padding="5dp"
    android:contentDescription="unit Img" />
    <LinearLayout
        android:id="@+id/ll_unit_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_black"/>
        <TextView
            android:id="@+id/tv_asset_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_asset_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_asset_distance_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_black"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_unit_direction_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@color/gradient_blue_dark"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/iv_unit_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="5dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_proceed_asset_selection"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/arrow"/>




