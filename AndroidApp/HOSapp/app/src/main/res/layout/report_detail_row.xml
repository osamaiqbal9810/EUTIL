<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llayoutMain_rdr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/unitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inspection Unit 204"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/unitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="11:40 AM"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/report_status" />

            <TextView
                android:id="@+id/unitStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Completed" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">



        <TextView
            android:id="@+id/totalTimeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 hr 10m"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llayoutLocation_rdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llayoutMain_rdr"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingRight="5dp"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLat_rdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.778279"
                android:textSize="@dimen/text_size_location" />

            <TextView
                android:id="@+id/tvLong_rdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-119.41293"
                android:textSize="@dimen/text_size_location" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/locationDesc_rdr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llayoutLocation_rdr"

        android:layout_marginTop="5dp"

        android:text=""
        android:textSize="12sp"
        android:visibility="visible" />

</RelativeLayout>