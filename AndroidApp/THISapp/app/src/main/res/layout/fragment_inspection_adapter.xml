<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_inspection_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gradient_green_dark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/inspections"
            android:textSize="@dimen/tile_font_size_title"
            android:textColor="@color/title_text"

            android:gravity="center_vertical"

            android:textStyle="bold"
            android:fontFamily="@font/cabin"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_task_form"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/cabin"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            app:drawableRightCompat="@drawable/ic_web_asset_gray_24dp" />
        <TextView
            android:id="@+id/tv_map_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/cabin"
            android:textSize="12sp"
            android:gravity="center_vertical"
            app:drawableRightCompat="@drawable/map_mode_selector" />

        <ImageView
            android:id="@+id/inspection_expand_indicator"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_expand_less_white_24dp"
            app:tint="#000000"
            android:layout_marginEnd="@dimen/dp10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_assets_filter"
        android:layout_width="match_parent"
        android:background="@drawable/linear_layout_border"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="3"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/ll_type_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/dp5"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="@string/type"
                android:layout_marginLeft="@dimen/dp5" />
            <Spinner
                android:id="@+id/sp_asset_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_range_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="@string/range"/>
            <Spinner
                android:id="@+id/sp_range_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sort_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="@string/sort"/>
            <Spinner
                android:id="@+id/sp_sorting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

