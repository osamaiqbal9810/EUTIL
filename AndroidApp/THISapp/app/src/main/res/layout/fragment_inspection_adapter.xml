    </LinearLayout>

    <ExpandableListView
        android:id="@+id/inspectionExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true">
    </ExpandableListView>
</LinearLayout>