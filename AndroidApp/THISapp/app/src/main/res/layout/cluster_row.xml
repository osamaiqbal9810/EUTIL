<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_bottom_with_background"
    android:padding="10dp"
    android:layout_marginBottom="12dp">
    <LinearLayout
        android:id="@+id/ll_old_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_cluster_asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Asset Name"/>
        <LinearLayout
            android:id="@+id/ll_cluster_asset_type"
            android:layout_below="@id/tv_cluster_asset_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/cluster_asset_type"/>
            <TextView
                android:id="@+id/tv_cluster_asset_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Loading asset..."/>
        </LinearLayout>
    </LinearLayout>

    <!--<LinearLayout
        android:id="@+id/ll_cluster_asset_address"
        android:layout_below="@id/ll_cluster_asset_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/location_dialogue_heading"/>
        <TextView
            android:id="@+id/tv_cluster_asset_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Loading address..."/>
    </LinearLayout>-->
    <LinearLayout
        android:id="@+id/ll_new_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_cluster_row_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cabin"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Name:" />

            <TextView
                android:id="@+id/tv_asset_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cabin"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Asset Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_cluster_item_row_type_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cabin"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Type:" />

            <TextView
                android:id="@+id/tv_asset_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cabin"
                android:gravity="center"
                android:text="Asset Name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cabin"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Test(s):" />

            <TextView
                android:id="@+id/tv_asset_test_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/cabin"
                android:text="Asset Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_long_click_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/cabin"
                android:textColor="@color/color_db_stop"
                android:textStyle="bold"
                android:text="Please long press to see the further options"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>