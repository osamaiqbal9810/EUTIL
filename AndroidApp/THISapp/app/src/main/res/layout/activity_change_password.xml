            android:paddingBottom="@dimen/dp10"
            android:text=""
            android:textColor="@color/title_black"
            android:textSize="@dimen/dp13"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp40" />

        <ImageView
            android:id="@+id/iv_show_new_password"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:onClick="showHidePass"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_baseline_visibility_24" />
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:text="@string/confirm_new_password"/>
    <RelativeLayout
        android:id="@+id/rl_new_password_again"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10">

        <EditText
            android:id="@+id/et_new_password_again"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp45"
            android:hint="@string/_6_or_more_characters"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp40"
            android:paddingBottom="@dimen/dp10"
            android:text=""
            android:textColor="@color/title_black"
            android:textSize="@dimen/dp13"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp40" />

        <ImageView
            android:id="@+id/iv_show_new_password_again"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:onClick="showHidePass"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_baseline_visibility_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp5" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_change_password"
        android:layout_below="@id/rl_new_password_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/btn_color_primary"
        android:textColor="@color/credentials_white"
        android:text="@string/title_new_report_btn_edit" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
