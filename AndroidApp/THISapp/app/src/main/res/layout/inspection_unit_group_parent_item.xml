<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_start_button_light"
    android:paddingEnd="3dp"
    android:paddingStart="3dp"
    android:paddingTop="@dimen/dp5"
    android:orientation="vertical"
    android:paddingBottom="3dp"

    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@color/color_inspection_row"
            android:weightSum="1">

            <View android:background="@drawable/circle_gray"
                android:id="@+id/viewParent"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tvParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:fontFamily="@font/cabin"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/title_text"
                android:paddingStart="5dp" />

            <ImageView
                android:id="@+id/img_issue_add_iupi"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:tint="#5c5c5c"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:padding="10dp"

                android:background="?android:attr/selectableItemBackground"

                app:srcCompat="@drawable/add_button_selector"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_inspection_tile"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/pin_light_gray"


            android:visibility="visible" />
    </FrameLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_inspection_row"
        android:gravity="end"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgViewPopup"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/more"
            android:layout_marginLeft="5dp"
            />
        <View android:background="@drawable/circle_gray"
            android:id="@+id/imgEquipment"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp" />
        <TextView
            android:id="@+id/tvEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent"
            android:fontFamily="@font/cabin"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/title_text"
            android:visibility="invisible"
            android:paddingStart="5dp" />





        <LinearLayout
            android:id="@+id/ll_issues_counts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="0"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0"
                android:clipToPadding="false"
                android:paddingRight="10dp">


                <ImageView
                    android:id="@+id/iv_defects_list"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_notification"

                    />

                <TextView

                    android:id="@+id/issue_count_new"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|end|top"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginRight="-1dp"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </FrameLayout>

            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="/"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView

                android:id="@+id/issue_count_old"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fixAssetLocationEdit"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_margin="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/edit_location_btn_selector"
            android:drawableTint="@android:color/black" />

    </LinearLayout>
</LinearLayout>
