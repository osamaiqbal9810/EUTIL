<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/credentials_white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="577px"
            android:layout_height="80px"
            android:layout_marginTop="20dp"
            android:src="@drawable/tek_logo"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="@drawable/gradient_bar_background"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="278px"
                android:layout_height="66px"
                android:layout_gravity="center"
                android:src="@drawable/logo_timps"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contract_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/cabin"
                android:paddingLeft="@dimen/dp5"
                android:text="--------"/>
        </LinearLayout>

    <!--android:paddingTop="@dimen/activity_vertical_margin"-->

    <!--<ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btServerSettings"
        android:layout_gravity="right"
        android:background="@null"
        android:src="@drawable/ic_settings_applications_black_24dp"/>-->
    <TextView
        android:id="@+id/tv_app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="1dp"
        android:textColor="@color/title_black"
        android:textSize="15sp"
        android:layout_marginBottom="@dimen/login_activity_vertical_margin_below_title"
        android:layout_marginTop="@dimen/login_activity_vertical_margin"
        app:fontFamily="@font/cabin"
        android:textStyle="bold"
        android:text="@string/track_inspection_maintenance_and_planning_system"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="1dp">

        <!-- Login progress -->
        <LinearLayout
            android:id="@+id/login_for_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:fontFamily="@font/cabin"
                android:text="@string/welcome_text"
                android:textAlignment="center"
                android:textColor="@color/title_text"
                android:textSize="18sp"
                android:visibility="gone"
                app:fontFamily="@font/cabin"
                android:gravity="center_horizontal" />
            <ImageView
                android:id="@+id/iv_login_main"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/welcome_text"
                app:srcCompat="@drawable/login_screen_image" />

            <ImageView
                android:id="@+id/welcomeUserImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="0dp"
                android:paddingBottom="0dp"
                android:visibility="gone"
                android:contentDescription="@string/welcome_text"
                app:srcCompat="@drawable/login_screen_image" />

            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />


            <ScrollView
                android:id="@+id/login_form"
                android:layout_marginTop="@dimen/vertical_margin_above_credentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/email_login_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/credential_background"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:paddingTop="10dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/title_text">

                            <AutoCompleteTextView
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_email"
                                android:inputType="textEmailAddress"
                                android:fontFamily="@font/cabin"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/title_text"
                                android:textColorHint="@color/title_text"
                                android:textColorLink="@color/title_text"
                                android:theme="@style/LoginEditText"
                                android:nextFocusDown="@+id/password"
                                app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Light.Hint" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:id="@+id/rl_old_password"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/title_text">

                                <EditText
                                    android:id="@+id/password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Light.Hint"
                                    android:hint="@string/prompt_password"
                                    android:imeActionId="6"
                                    android:fontFamily="@font/cabin"
                                    android:imeActionLabel="@string/action_sign_in_short"
                                    android:imeOptions="actionUnspecified"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/title_text"
                                    android:textColorLink="@color/title_text"
                                    android:theme="@style/LoginEditText"
                                    android:nextFocusDown="@+id/iv_show_password"
                                    android:textColorHint="@color/title_text"

                                    android:text="" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:id="@+id/iv_show_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp5"
                                android:onClick="showHidePass"
                                android:padding="@dimen/dp5"
                                android:nextFocusDown="@+id/email_sign_in_button"
                                android:src="@drawable/ic_baseline_visibility_off_24_blue"
                                android:contentDescription="show/hide" />
                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/email_sign_in_button"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textAllCaps="false"
                        android:background="@color/btn_color_primary"
                        android:fontFamily="@font/cabin"
                        android:text="@string/action_log_in"
                        android:textSize="@dimen/btn_font_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/loggedInLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/proceedBtn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@color/btn_color_primary"
                    android:fontFamily="@font/cabin"
                    android:text="@string/action_proceed"
                    android:textSize="@dimen/btn_font_size"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/logOutBtn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@color/btn_color_primary"
                    android:fontFamily="@font/cabin"
                    android:text="@string/action_log_out"
                    android:textSize="@dimen/btn_font_size"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_settings"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@color/btn_color_primary"
                    android:text="@string/action_settings"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn_language"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@color/btn_color_primary"
                    android:fontFamily="@font/cabin"
                    android:text="@string/language_setting"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageButton
                    android:id="@+id/imgBtnSettin_la"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cabin"
                    android:contentDescription="@string/action_settings"
                    app:srcCompat="@drawable/ic_settings_applications_black_24dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/versionTxt"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:paddingEnd="4dp"
            android:paddingRight="7dp"
            android:paddingBottom="1dp"
            android:text="Version: 3.52"
            android:textColor="@color/title_black"
            android:textSize="12sp"
            android:textStyle="italic"
            app:fontFamily="@font/cabin" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>