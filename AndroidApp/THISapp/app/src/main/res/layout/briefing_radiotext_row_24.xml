<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">


<RadioGroup
	android:id="@+id/rg_row_24a"
	style="@style/RadioGroupStyle">
	
	<RadioButton
    android:id="@+id/radioButton_yes_24a"
		style="@style/RadioButtonStyle"
		android:fontFamily="@font/cabin"
    android:text="@string/briefing_yes" />
	
	<RadioButton
    android:id="@+id/radioButton_no_24a"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
		android:fontFamily="@font/cabin"
    android:text="@string/briefing_no" />
	
	</RadioGroup>
	
	<TextView
    android:id="@+id/textView_row_24"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center"
		android:fontFamily="@font/cabin"
    android:text="@string/briefing_addressed" />
	
	<RadioGroup
		android:id="@+id/rg_row_24b"
		style="@style/RadioGroupStyle">
	
	<RadioButton
    android:id="@+id/radioButton_yes_24b"
		style="@style/RadioButtonStyle"
		android:fontFamily="@font/cabin"
    android:text="@string/briefing_yes" />
	
	<RadioButton
    android:id="@+id/radioButton_no_24b"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
		android:fontFamily="@font/cabin"
    android:text="@string/briefing_no" />
	
	</RadioGroup>
 
</LinearLayout>