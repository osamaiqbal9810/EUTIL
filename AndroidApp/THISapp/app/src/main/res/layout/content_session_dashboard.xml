<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_content_session_dashboard"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_sessions_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="visible"
            android:background="@color/title_background">

            <ImageView
                android:id="@+id/iv_sessions_title"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:drawableTint="@android:color/black"
                android:src="@drawable/ic_web_asset_gray_24dp"
                android:layout_marginStart="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/session_status_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_sessions_title"
                android:fontFamily="@font/cabin"
                android:textColor="@color/title_text" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_session_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/inspection_title"/>
                <TextView
                    android:id="@+id/tv_sessions_inspection_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is inspection title"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_session_elap_time"
                    android:layout_gravity="top"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_time_recorded"
                    android:contentDescription="clock" />
                <TextView
                    android:id="@+id/tv_session_elap_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/cabin"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:textSize="45dp"/>
                <TextView
                    android:id="@+id/tv_session_elap_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/cabin"
                    android:layout_gravity="bottom"
                    android:textSize="45dp"/>

                <TextView
                    android:id="@+id/tv_session_elap_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/cabin"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sessions_status"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@color/btn_background"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iv_session_action_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/stop_btn"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_session_action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/cabin"
                    android:layout_marginTop="1dp"
                    android:text="@string/stop_btn_title"
                    android:textColor="@color/credentials_white"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_session_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">

                <RelativeLayout
                    android:id="@+id/rl_session_start"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/tile_padding"
                    android:background="@color/tile_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_session_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/tile_small_margin_right_left"
                        android:layout_marginLeft="@dimen/tile_small_margin_right_left"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_task_status"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/title_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/tile_font_size_title"
                            android:fontFamily="@font/cabin"
                            android:text="@string/start_tile_title"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/v_divider_task"
                        android:layout_below="@id/ll_session_start"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/tile_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_divider_task"
                        android:layout_marginTop="@dimen/tile_top_bottom"
                        android:layout_marginBottom="@dimen/tile_top_bottom"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_session_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/cabin"
                            android:text="N/A"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_start_mp_prefix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/tile_font_size_details"
                                android:textColor="@color/title_text"
                                android:fontFamily="@font/cabin"
                                android:text=""/>
                            <TextView
                                android:id="@+id/tv_session_start_mp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/tile_font_size_details"
                                android:textColor="@color/title_text"
                                android:fontFamily="@font/cabin"
                                android:text="N/A"/>
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_issues_reported"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="@dimen/tile_padding"
                    android:background="@color/tile_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_issues_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="@dimen/tile_right_left"
                        android:layout_marginLeft="@dimen/tile_right_left"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_task_status"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/cabin"
                            android:text="@string/exp_end_tile_title"
                            android:textColor="@color/title_text"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/tile_font_size_title"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <View
                        android:id="@+id/v_divider_issues"
                        android:layout_below="@id/ll_issues_details"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/tile_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_divider_issues"
                        android:layout_marginTop="@dimen/tile_top_bottom"
                        android:layout_marginBottom="@dimen/tile_top_bottom"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_session_exp_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="N/A"
                            android:fontFamily="@font/cabin"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_end_mp_prefix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/tile_font_size_details"
                                android:textColor="@color/title_text"
                                android:fontFamily="@font/cabin"
                                android:text=""/>
                            <TextView
                                android:id="@+id/tv_session_exp_end_mp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/tile_font_size_details"
                                android:textColor="@color/title_text"
                                android:fontFamily="@font/cabin"
                                android:text="N/A"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_sessions"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="visible"
            android:background="@color/title_background">

            <ImageView
                android:id="@+id/iv_sessions_list_title"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:drawableTint="@android:color/black"
                android:src="@drawable/ic_web_asset_gray_24dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/session_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_sessions_list_title"
                android:fontFamily="@font/cabin"
                android:textColor="@color/title_text"
                android:layout_marginStart="10dp" />
            <ImageButton
                android:id="@+id/ib_sessions_list_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_unfold_more_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_transparent_background"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>
        <ListView
            android:id="@+id/lv_sessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>