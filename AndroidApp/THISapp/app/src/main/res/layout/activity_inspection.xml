<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".inspection.InspectionActivity"
    android:id="@+id/rl_inspection_sessions"
    tools:ignore="ExtraText">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_Inspection_Legends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvInspectionSymbols"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sessions_expandableList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/scroll_view_border"
                android:layout_below="@+id/ll_Inspection_Legends"
                android:visibility="visible"
                android:orientation="vertical">

                <include layout="@layout/fragment_session_view" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/ll_sessions_expandableList"
                android:paddingTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gradient_green_dark"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="@string/maintenance_title"
                        android:textSize="@dimen/tile_font_size_title"
                        android:textColor="@color/title_text"

                        android:gravity="center_vertical"

                        android:textStyle="bold"
                        android:fontFamily="@font/cabin"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/maintenance_expand_indicator"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_expand_more_white_24dp"
                        app:tint="#000000"
                        android:layout_marginEnd="@dimen/dp10" />

                </LinearLayout>
                <FrameLayout
                    android:id="@+id/fl_maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_below="@+id/ll_maintenance">

                <include layout="@layout/fragment_inspection_adapter" />

            </LinearLayout >


        </LinearLayout>
    </ScrollView>
</RelativeLayout>

