<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InspectionStartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/ll_start_mp_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_msg_wp_start_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/require_mp_title"/>
            <TextView
                android:id="@+id/tv_title_mp_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:text="MP"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_start_mp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvLineName_ais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line Name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_flag_black_24dp"/>
                <TextView
                    android:id="@+id/tvMPStart_ais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_flag_grey_24dp"/>
                <TextView
                    android:id="@+id/tvMPEnd_ais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_start_button_light"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_session_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/title_background"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_sessions_dialog_title"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:drawableTint="@android:color/black"
                android:src="@drawable/ic_web_asset_gray_24dp"
                android:layout_marginStart="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/session_starting_title"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/cabin"
                android:textColor="@color/title_text" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_limit_input"
            android:layout_below="@id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp10"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/cabin"
                    android:text="@string/from"/>
                <TextView
                    android:id="@+id/tv_mp_unit_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/cabin"
                    android:text="(mp)"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_start_mp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_workplan_start_mp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cabin"
                        android:inputType="numberDecimal"
                        android:minLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:layout_gravity="center_vertical"

                    android:textStyle="bold"
                    android:text="@string/to"/>
                <TextView
                    android:id="@+id/tv_mp_unit_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:layout_gravity="center_vertical"
                    android:text="(mp)"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_exp_end_mp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_exp_end_mp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minLines="1"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/cabin"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sharing_inspection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@color/issue_row_background"

            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_sharing_inspection_members_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Few other users working on this inspection."/>
            <LinearLayout
                android:id="@+id/ll_list_sharing_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/lv_sharing_members"
                    android:nestedScrollingEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bottom_sheet_indicator"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_traverse_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:background="@color/issue_row_background"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/img_traversing"/>
                    <TextView
                        android:id="@+id/tv_traverse_track_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:textSize="@dimen/btn_font_size"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="@string/traversing"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_tile_disabled_dark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/sp_traverse_track"
                        android:fontFamily="@font/cabin"
                        android:textSize="@dimen/btn_font_size"
                        android:layout_weight=".6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/cb_traverse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:layout_weight="2.4"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_selected_traverse_track_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textStyle="italic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:layout_marginTop="3dp"
                android:paddingTop="3dp"
                android:background="@color/issue_row_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/img_observing"/>

                    <TextView
                        android:id="@+id/tv_observe_track_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/cabin"
                        android:textSize="@dimen/btn_font_size"
                        android:text="@string/observing"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_tile_disabled_dark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/sp_observe_track"
                        android:fontFamily="@font/cabin"
                        android:textSize="@dimen/btn_font_size"
                        android:layout_weight=".6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/cb_observe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:layout_weight="2.4"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_selected_observe_track_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="italic"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bottom_sheet_indicator"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/issue_row_background"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:text="@string/traversed_by_title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <RadioGroup
                        android:id="@+id/rg_traverse_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/rb_action_class2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:textSize="12sp"
                            android:tag="Hi-Rail"
                            android:text="@string/traverse_by_driving" />
                        <RadioButton
                            android:id="@+id/rb_action_class1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/cabin"
                            android:tag="Walking"
                            android:text="@string/traverse_by_walking" />
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bottom_sheet_indicator"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_weather_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/issue_row_background"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/cabin"
                android:textSize="@dimen/btn_font_size"
                android:textStyle="bold"
                android:text="@string/weather_condition_title"/>
            <EditText
                android:id="@+id/et_weather_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bottom_sheet_indicator"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/issue_row_background"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/cabin"
                    android:textStyle="bold"
                    android:textSize="@dimen/btn_font_size"
                    android:paddingBottom="10dp"
                    android:text="@string/select_temperature_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:padding="10dp"
                    android:text="( &#176;"/>
                <TextView
                    android:id="@+id/tv_temp_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textStyle="bold"
                    android:textSize="@dimen/btn_font_size"
                    android:text="F"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:textSize="@dimen/btn_font_size"
                    android:text=" )"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/temp_values"
                android:fontFamily="@font/cabin"
                android:prompt="@string/temp_prompt" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bottom_sheet_indicator"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_inspection_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/issue_row_background"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/inspection_type_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <RadioGroup
                    android:id="@+id/rg_inspection_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rb_inspection_type_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:textSize="12sp"
                        android:text="@string/inspection_type_1" />
                    <RadioButton
                        android:id="@+id/rb_inspection_type_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/cabin"
                        android:text="@string/inspection_type_2" />
                    <RadioButton
                        android:id="@+id/rb_inspection_type_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/cabin"
                        android:text="@string/inspection_type_3" />
                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bottom_sheet_indicator"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_inspection_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/issue_row_background"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="@dimen/btn_font_size"
                android:text="@string/description_title"/>
            <EditText
                android:id="@+id/et_inspection_type_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"/>
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bottom_sheet_indicator"/>
     -->   </LinearLayout>
        <!--<LinearLayout
            android:id="@+id/ll_visual_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_visual_track_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select the Traverse track"/>
            <Spinner
                android:id="@+id/sp_visual_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:background="@color/btn_color_primary"
                android:padding="0dp"
                android:fontFamily="@font/cabin"
                android:textColor="@color/credentials_white"
                android:textSize="17sp"
                android:text="@string/btn_done"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:background="@color/color_stop_background"
                android:padding="0dp"
                android:fontFamily="@font/cabin"
                android:textColor="@color/credentials_white"
                android:textSize="17sp"
                android:layout_marginRight="30dp"
                android:text="@string/btn_cancel"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>