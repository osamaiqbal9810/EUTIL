<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_sessions_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="visible"
                android:background="@color/title_background">

                <ImageView
                    android:id="@+id/iv_sessions_dialog_title"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:drawableTint="@android:color/black"
                    android:src="@drawable/ic_web_asset_gray_24dp"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/session_complete_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_sessions_dialog_title"
                    android:fontFamily="@font/cabin"
                    android:textColor="@color/title_text" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp13"
                android:layout_below="@id/rl_sessions_dialog_title"
                >
                <LinearLayout
                    android:id="@+id/ll_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_loc_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingRight="3dp"
                            android:fontFamily="@font/cabin"
                            android:text=""
                            android:paddingEnd="3dp" />
                        <TextView
                            android:id="@+id/tv_session_end_dialog_range_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:fontFamily="@font/cabin"
                            android:text=""
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:gravity="end" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_limit_input"
                    android:layout_below="@id/ll_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp10"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/cabin"
                            android:text="@string/from"/>
                        <TextView
                            android:id="@+id/tv_mp_unit_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/cabin"
                            android:text="(mp)"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ti_start_mp"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_start_session_mp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/cabin"
                                android:inputType="numberDecimal"
                                android:minLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:layout_gravity="center_vertical"

                            android:textStyle="bold"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/tv_mp_unit_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:layout_gravity="center_vertical"
                            android:text="(mp)"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ti_end_mp"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_session_end_mp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minLines="1"
                                android:inputType="numberDecimal"
                                android:fontFamily="@font/cabin"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/ll_limit_input"
                    android:id="@+id/ll_traverse_track"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/issue_row_background"
                        android:layout_margin="@dimen/dp5"
                        android:padding="@dimen/dp10"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/img_traversing"/>
                            <TextView
                                android:id="@+id/tv_traverse_track_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:textSize="@dimen/btn_font_size"
                                android:layout_gravity="bottom"
                                android:paddingStart="@dimen/dp5"
                                android:paddingLeft="@dimen/dp5"
                                android:text="@string/traversed"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tv_selected_traverse_track"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="italic"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        android:padding="@dimen/dp10"
                        android:background="@color/issue_row_background"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/img_observing"/>
                            <TextView
                                android:id="@+id/tv_observe_track_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:textSize="@dimen/btn_font_size"
                                android:layout_gravity="bottom"
                                android:paddingStart="@dimen/dp5"
                                android:paddingLeft="@dimen/dp5"
                                android:text="@string/observed"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tv_selected_observe_track"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>