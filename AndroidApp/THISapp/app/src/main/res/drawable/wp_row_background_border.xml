<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#00000000" />
            <solid android:color="#2e80b8da" />
            <stroke
                android:width="2dp"
                android:color="#ea32a6f4" />
            <corners
                android:bottomRightRadius="670dp"
                android:topRightRadius="670dp"
                android:bottomLeftRadius="0dp"
                android:radius="50dp"
                android:topLeftRadius="0dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
        <corners
            android:bottomLeftRadius="0dp"
            android:radius="30dp"
            android:topLeftRadius="0dp" />
    </item>
</layer-list>