<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_empty="true" >
        <layer-list>
            <item
                android:left="0dp"
                android:right="3dp"
                android:top="25dp"
                android:bottom="34dp"
                android:width="24dp" android:height="24dp"
                android:drawable="@drawable/ic_baseline_keyboard_arrow_down_24">
            </item>
        </layer-list>
    </item>

    <item
        android:state_expanded="false" >
        <layer-list>
            <item
                android:left="0dp"
                android:right="3dp"
                android:top="25dp"
                android:bottom="34dp"
                android:width="24dp" android:height="24dp"
                android:drawable="@drawable/ic_baseline_keyboard_arrow_up_24">
            </item>
        </layer-list>
    </item>
</selector>