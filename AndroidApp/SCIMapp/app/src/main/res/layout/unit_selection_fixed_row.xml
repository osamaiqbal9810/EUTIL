<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:orientation="horizontal"
    android:padding="1dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/iv_unit_title"
        android:layout_width="41dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:contentDescription="unit Img"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:singleLine="false"
        android:src="@drawable/unit_static"
        app:layout_constraintEnd_toStartOf="@+id/tv_asset_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_asset_name"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:ellipsize="end"
        android:fontFamily="@font/cabin"
        android:lines="2"
        android:minLines="2"
        android:singleLine="false"
        android:text="sdasdsad"
        android:textColor="@color/title_black"
        app:layout_constraintBottom_toTopOf="@+id/ll_asset_counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_unit_title"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_asset_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/iv_proceed_asset_selection"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_asset_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_asset_name"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_asset_issue_count_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:text="Reported: " />

        <TextView
            android:id="@+id/tv_asset_issue_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/title_black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_asset_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="222dp"
        android:layout_marginRight="222dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/cabin"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_proceed_asset_selection"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ll_asset_counter"
        app:layout_constraintTop_toBottomOf="@+id/ll_asset_counter"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_proceed_asset_selection"
        android:layout_width="38dp"
        android:layout_height="26dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toEndOf="@+id/tv_asset_name"
        app:layout_constraintTop_toTopOf="@+id/iv_unit_title" />


</androidx.constraintlayout.widget.ConstraintLayout>

